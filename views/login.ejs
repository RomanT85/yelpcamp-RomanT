<% include ./partials/header %>

<div class="container">

	<% if (message.length > 0) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>

	<div class="row bgcForm">
		<div class="col-md-6 col-md-offset-3">
		<h1>Log In</h1>
			<form action="/login" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password">
				</div>
					<button class="btn btn-info btn-block"><i class="fa fa-sign-in" aria-hidden="true"></i> Log In</button>
			</form>
			<hr class="style-two" />
				<h4>Forgot your password</h4>
				<br />
				<p>No worries, you can recover it here!</p>
				<form action="/passwordrecover" method="POST">
					<input class="form-control" type="email" name="email" placeholder="Enter your email here" />
					<button class="btn btn-primary btn-block"><i class="fa fa-hand-o-right" aria-hidden="true"></i> Recover your Password</button>
				</form>
			<hr class="style-two" />
			<div class="form-group">
				<h4>Don't have an account</h4> 
				<br />
				<p>you can register here.</p>
				<a class="btn btn-primary btn-block" href="/register"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</a>
			</div>
		</div>
	</div>
</div>

<% include ./partials/footer %>